@model IEnumerable<CasusStartToBike.Models.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Account</h2>

<p>
    @Html.ActionLink("Nieuwe aanmaken", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Distance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfileImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            @if (Session["UserRole"].ToString() == "Admin")
            {
                <td>
                    @Html.ActionLink("Bewerken", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Verwijderen", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            }

        </tr>
    }

</table>
