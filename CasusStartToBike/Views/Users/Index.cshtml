@model IEnumerable<CasusStartToBike.Models.User>

@{
    ViewBag.Title = "Zoek gebruiker";
}

<h2>Overzicht</h2>

<p>
    @Html.ActionLink("Nieuwe Aanmaken", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Account.FirstName)
        </th>
        @if (Session["UserRole"].ToString() == "Admin")
        {
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account.FirstName)
            </td>
            @if (Session["UserRole"].ToString() == "Admin")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("Bewerken", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                    @Html.ActionLink("Verwijder", "Delete", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                </td>
            }
            <td>
                @Html.ActionLink("Profiel Bekijken", "Profile", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
            </td>
        </tr>
    }

</table>
