@model CasusStartToBike.Models.User

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>
<hr />


@Html.AntiForgeryToken()





<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    <div class="feature col">
        <p>@Html.DisplayFor(model => model.Account.FirstName)</p>
    </div>
    <div class="feature col">
        <dt>
            Follows
        </dt>
        <dd>
            <p>@Html.DisplayFor(model => model.Follower.ToList().Count)</p>
        </dd>
    </div>
    <div class="feature col">
        <dt>
            Followers
        </dt>
        <dd>
            <p>@Html.DisplayFor(model => model.Follower1.ToList().Count)</p>
        </dd>
        
    </div>
    <div>
        @if (Model.Id == Convert.ToInt32(Session["UserID"]))
        {
            <td>
                @Html.ActionLink("Gebruiker gegevens aanpassen", "Edit", new { id = Model.Id })
            </td>
        }
        else
        {
            @Html.ActionLink("Volg", "FollowUser", new { id = Model.Id })
        }
    </div>
   

</div>



<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-Public-tab" data-bs-toggle="pill" data-bs-target="#pills-Public" type="button" role="tab" aria-controls="pills-Public" aria-selected="true">Evenementen</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Own-tab" data-bs-toggle="pill" data-bs-target="#pills-Own" type="button" role="tab" aria-controls="pills-Own" aria-selected="false">Routes</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Show-tab" data-bs-toggle="pill" data-bs-target="#pills-Show" type="button" role="tab" aria-controls="pills-Show" aria-selected="false">Badges</button>
    </li>
</ul>

<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-Public" role="tabpanel" aria-labelledby="pills-Public-tab">

        <table class="table">
            <tr>
                <th>
                    Evenement Naam
                </th>
                <th>
                    Evenement Start
                </th>
                <th>
                    Evenement Einde
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.CycleEvent_Created)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventEnd)
                    </td>

                </tr>
            }
        </table>
    </div>
    <div class="tab-pane fade" id="pills-Own" role="tabpanel" aria-labelledby="pills-Own-tab">
        <table class="table">
            <tr>
                <th>
                    Route Naam
                </th>
                <th>
                    Route Type
                </th>
                <th>
                    Moeilijkheidsgraad
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.CycleRoute)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RouteName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RouteType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Difficulty)
                    </td>

                </tr>
            }
        </table>
    </div>

</div>

